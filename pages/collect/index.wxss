/* pages/collect/index.wxss */
.collect_container .collect_title {
  padding: 40rpx 0;
}
.collect_container .collect_title .collect_tips {
  padding: 20rpx;
  margin-left: 20rpx;
  text-align: center;
  border: 1rpx solid #cccccc;
  background-color: #ffffff;
}
.collect_container .collect_title .active {
  color: var(--themeColor);
  border: 1rpx solid currentColor;
}
.collect_container .collect_list .collect_item {
  display: flex;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f2f2f2;
}
.collect_container .collect_list .collect_item .collect_image {
  flex: 1;
}
.collect_container .collect_list .collect_item .collect_content {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 10rpx;
}
.collect_container .collect_list .collect_item .collect_content .collect_name {
  color: #333333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_container .collect_list .collect_item .collect_content .collect_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
