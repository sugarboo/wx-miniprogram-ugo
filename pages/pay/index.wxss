/* pages/cart/index.wxss */
page {
  padding-bottom: 100rpx;
}
.cart_container .address_section {
  background-color: #ffffff;
  padding: 30rpx 0;
}
.cart_container .address_section .show_address .name_and_tel {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}
.cart_container .address_section .show_address .address_all {
  padding: 0 20rpx;
}
.cart_container .cart_section {
  background-color: #ffffff;
  margin-top: 20rpx;
}
.cart_container .cart_section .cart_title {
  background-color: #fbfbfb;
  color: var(--themeColor);
  font-size: 40rpx;
  padding: 10rpx 0 10rpx 20rpx;
  text-align: center;
}
.cart_container .cart_section .goods_item {
  display: flex;
}
.cart_container .cart_section .goods_item .goods_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_container .cart_section .goods_item .goods_image image {
  width: 80%;
}
.cart_container .cart_section .goods_item .goods_info {
  flex: 4;
  flex-direction: column;
  display: flex;
  justify-content: space-around;
}
.cart_container .cart_section .goods_item .goods_info .goods_intro {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #333333;
}
.cart_container .cart_section .goods_item .goods_info .goods_price_count {
  display: flex;
  justify-content: space-between;
}
.cart_container .cart_section .goods_item .goods_info .goods_price_count .goods_price {
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: bold;
}
.cart_container .cart_section .goods_item .goods_info .goods_price_count .goods_count {
  display: flex;
  padding-right: 30rpx;
}
.cart_container .cart_section .goods_item .goods_info .goods_price_count .goods_count .show_count {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #dddddd;
}
.cart_container .tools_section {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  border-top: 4rpx solid #f2f2f2;
  border-bottom: 4rpx solid #f2f2f2;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
}
.cart_container .tools_section .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}
.cart_container .tools_section .total_price_wrap .total_price .total_price_text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.cart_container .tools_section .order_pay_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}
